<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ttl_style">
        <item name="android:textSize">34dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="loginputstyle">

    </style>

    <style name="btnstyle">

    </style>
    <style name="button_for_login">
        <item name="android:background">@drawable/button_drawable</item>
        <item name="android:layout_margin">10dp</item>
    </style>
    <style name="register_input_field">
        <item name="android:background">@drawable/input_theme</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="common_text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12dp</item>
    </style>
    <style name="list_text" parent="common_text">
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>
    <style name="register_info" parent="common_text">
        <item name="android:textSize">15dp</item>
        <item name="android:layout_margin">12dp</item>
    </style>

</resources>
